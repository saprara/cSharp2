<Window x:Class="W5IntroToWPF.StackPanelEg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W5IntroToWPF"
        mc:Ignorable="d"
        Title="StackPanelEg" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Button 1" Margin="10"/>
            <Button Content="Button 2" Margin="10"/>
            <Button Content="Button 3" Margin="10"/>
            <Button Content="Button 4" Margin="10"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center">
            <Button Content="Button 5" Margin="10"/>
            <Button Content="Button 6" Margin="10"/>
            <Button Content="Button 7" Margin="10"/>
            <Button Content="Button 8" Margin="10"/>


        </StackPanel>
    </StackPanel>
</Window>
