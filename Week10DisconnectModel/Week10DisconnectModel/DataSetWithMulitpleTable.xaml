<Window x:Class="Week10DisconnectModel.DataSetWithMulitpleTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week10DisconnectModel"
        mc:Ignorable="d"
        Title="DataSetWithMulitpleTable" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="171*"/>
            <ColumnDefinition Width="629*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="BtnLoad" Content="Load" HorizontalAlignment="Left" Margin="70,10,0,0" VerticalAlignment="Top" Width="59" Click="BtnLoad_Click"/>
        <DataGrid x:Name="Datagrd1" HorizontalAlignment="Left" Height="318" Margin="10,67,0,0" VerticalAlignment="Top" Width="368" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="2"/>
        <DataGrid x:Name="Datagrd2" HorizontalAlignment="Left" Height="315" Margin="244,70,0,0" VerticalAlignment="Top" Width="361" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Column="1"/>

    </Grid>
</Window>
