<Window x:Class="Week10DisconnectModel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week10DisconnectModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <DataGrid x:Name="grdProducts" Height="356" Width="368" Canvas.Left="32" Canvas.Top="35"/>
        <Button x:Name="btnLoadAllProducts" Content="Load All Products" Canvas.Left="434" Canvas.Top="35" Height="40" Width="187" FontSize="20" FontWeight="Bold" Click="btnLoadAllProducts_Click"/>
        <Label Content="ID" Canvas.Left="495" Canvas.Top="110" FontSize="20" FontWeight="Bold"/>
        <Label Content="Name" Canvas.Left="460" Canvas.Top="152" FontSize="20" FontWeight="Bold"/>
        <Label Content="Price" Canvas.Left="470" Canvas.Top="194" FontSize="20" FontWeight="Bold"/>
        <Label Content="Quantity" Canvas.Left="434" Canvas.Top="236" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txtId" Canvas.Left="532" Canvas.Top="114" TextWrapping="Wrap" Width="89" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txtName" Canvas.Left="532" Canvas.Top="160" TextWrapping="Wrap" Width="236" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txtPrice" Canvas.Left="531" Canvas.Top="202" TextWrapping="Wrap" Width="237" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txtQuantity" Canvas.Left="532" Canvas.Top="244" TextWrapping="Wrap" Width="236" FontSize="20" FontWeight="Bold"/>
        <Button x:Name="btnFind" Content="Find" Canvas.Left="650" Canvas.Top="114" Height="29" Width="118" FontSize="20" FontWeight="Bold" Click="btnFind_Click"/>
        <Button x:Name="btnInsert" Content="Insert" Canvas.Left="434" Canvas.Top="294" Height="40" Width="94" FontSize="20" FontWeight="Bold" Click="btnInsert_Click"/>
        <Button x:Name="btnUpdate" Content="Update" Canvas.Left="553" Canvas.Top="294" Height="40" Width="94" FontSize="20" FontWeight="Bold" Click="btnUpdate_Click"/>
        <Button x:Name="btnDelete" Content="Delete" Canvas.Left="674" Canvas.Top="294" Height="40" Width="94" FontSize="20" FontWeight="Bold" Click="btnDelete_Click"/>
        <Button x:Name="btnClearData" Content="Clear Data" Canvas.Left="650" Canvas.Top="35" Height="40" Width="118" FontSize="20" FontWeight="Bold"/>
        <Button x:Name="btnShowWindow2" Content="Show Window 2" Canvas.Left="433" Canvas.Top="351" Height="40" Width="334" FontSize="20" FontWeight="Bold" Click="btnShowWindow2_Click"/>
    </Canvas>
</Window>
